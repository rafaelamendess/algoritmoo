programa {
  funcao inicio() {
  
  //Declaracao da varíaveis
  inteiro i1, i2, i3, i4
  real media

 
  //Entrada
  escreva("Digite a primeira idade: ")
  leia(i1)
  escreva("Digite a segunda idade: ")
  leia(i2)
  escreva("Digite a terceira idade: ")
  leia(i3)
  escreva("Digte a quarta idade: ")
  leia(i4)

  //Processameno
  media = (i1+i2+i3+i4)/4

  //Saída
  
  escreva("A média entre as idades é: ", media )
 
 }

}
